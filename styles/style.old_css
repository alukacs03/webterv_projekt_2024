:root {
    --footer-color: #533710;
    --button-color: #2F981E;
    --button-color-active: #4E9F40;
    --header-color: #98651E;
    --ajanlat-color: #6E4B1F;
    --footer-text-color: #F0D394;
}

body {
    width: 100vw;
    height: 100vh;
    min-height: 100vh;
    max-width: 100vw;
    margin: 0;
    box-sizing: border-box;
    background-color: white;
    font-family: Arial, serif;
    display: flex;
    flex-direction: column;
}

.menuLink {
    color: beige;
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: bold;
}

#title {
    font-weight: bold;
    font-size: 2rem;
    text-decoration: none;
    color: beige;
}

header nav {
    justify-content: end;
    gap: 1rem;
    align-items: center;
    display: flex;
    text-decoration: none;
    margin: 0;
}

header {
    color: beige;
    display: grid;
    width: calc(100% - 2rem);
    grid-template-columns: 30% 70%;
    padding: 1rem;
    background-color: var(--header-color);
}

main {
    padding-left: 6rem;
    padding-right: 6rem;
    align-items: center;
    text-align: center;
}
#kiemelt{
    position: relative;
    display: flex;
    justify-content: space-around;
    width: 100%;
}
.kepek {
    border-radius: 1rem;
    width: 85%;
}

.ajanlat {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    border-radius: 1rem;
    background-color: var(--ajanlat-color);
    width: 15rem;
    height: 25rem;
}

.ajanlatSzoveg {
    margin-top: 0;
    margin-bottom: 0;
    color: white;
}

.nev{
    font-size: 1.5rem;
    font-weight: bold;
}

.ar{
    font-size: 1rem;
}

.ajanlatGomb:hover, .ajanlatGomb:active{
    background-color: var(--button-color-active);
    border-top: none;
    border-left: none;
    border-bottom: solid darkslategray;
    border-right: solid darkslategray;
}

.ajanlatGomb {
    color: white;
    font-weight: bold;
    font-size: 1.25rem;
    width: 12rem;
    height: 4rem;
    background-color: var(--button-color);
    border-top: none;
    border-left: none;
    border-bottom: solid black;
    border-right: solid black;
    border-radius: 0.5rem;
}

footer {
    background-color: var(--footer-color);
    color: var(--footer-text-color);
    position: absolute;
    bottom: 0;
    width: 100;
}

#f-tartalom{
    align-items: center;
    display: flex;
    flex-direction: column;
    width: 100%;
}

#addressBar{
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    justify-content: center;
    align-items: center;
}

.addressBarItem {
    text-align: center;
}